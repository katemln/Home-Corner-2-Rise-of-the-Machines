@model HomeCorner2.Models.Reservation
@{
    ViewBag.Title = "DeleteReservation";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}

<h2>DeleteReservation</h2>


<h3>Are you sure you want to cancel your reservation?</h3>
<div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cancel" class="btn btn-danger btn-sm" /> |
            @Html.ActionLink("Back to List", "MyReservations")
        </div>
    }

    <h4>Reservation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User.FirstName)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.User.LastName)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.House.Title)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.House.Images)
        </dt>
    </dl>
</div>