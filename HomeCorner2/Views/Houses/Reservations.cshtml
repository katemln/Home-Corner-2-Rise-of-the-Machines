@using Microsoft.AspNet.Identity
@model IEnumerable<HomeCorner2.Models.Reservation>

@{
    /**/

    ViewBag.Title = "Reservations";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}

<p>
    <h2> <span class="float-left">Reservations</span></h2>
    <span class="float-right">@Html.ActionLink("Create New", "Create")</span>
</p>
<hr />
<table id="reservations" class="table">
    <thead>
        <tr class="titles">
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Title
            </th>
            <th>
                Arrival Date
            </th>
            <th>
                Departure date
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.House.Images)
                </th>*@
            <th> </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.House.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <img src="../../HouseImages8/@item.House.Id" alt="" height=100 width=200 />
                </td>
                <td>
                    @Html.ActionLink("Cancel", "Delete", new { id = item.Id })
                </td>
            </tr>
        </tbody>
    }
</table>