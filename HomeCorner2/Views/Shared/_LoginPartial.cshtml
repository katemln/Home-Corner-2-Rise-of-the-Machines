        <li>@Html.ActionLink("My Reservations", "Index", "Houses", null, new { @class = "btn text-white" })</li>
        <li>@Html.ActionLink("Profile", "Index", "Manage", routeValues: null, htmlAttributes: new { @class = "btn text-white", title = "Manage" })</li>*@
