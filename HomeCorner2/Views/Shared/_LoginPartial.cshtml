@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    ViewBag.Title = "_LoggedInLayout";

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

<ul class="nav navbar-nav">
    @if (User.IsInRole("CanManageHouses"))
    {
        <li>@Html.ActionLink("All Houses", "Index", "Houses", null, new { @class = "btn text-white" })</li>
        <li>@Html.ActionLink("All Users", "Users", "Home", null, new { @class = "btn text-white" })</li>
    }
    <li>@Html.ActionLink("Search A Corner", "Index", "Houses", null, new { @class = "btn text-white" })</li>
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Profile
        </a>
        <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
            @Html.ActionLink("Profile", "Index", "Manage", routeValues: null, htmlAttributes: new { @class = "btn text-white dropdown-item", title = "Manage" })
            <div class="dropdown-divider"></div>
            @Html.ActionLink("My Reservations", "Index", "Houses", null, new { @class = "btn text-white dropdown-item" })
            @Html.ActionLink("My Houses", "Index", "Houses", null, new { @class = "btn text-white dropdown-item" })
        </div>
    </li>
