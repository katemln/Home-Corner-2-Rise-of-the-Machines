<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Corner</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/gijgo@1.9.6/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Annie+Use+Your+Telescope|Caveat|Cedarville+Cursive|Chewy|Shadows+Into+Light|Gloria+Hallelujah|Quicksand|Gloria+Hallelujah" rel="stylesheet">

</head>
<body id="main-body">
    <nav class="navbar navbar-expand-xl navbar-expand-lg navbar-expand-md navbar-expand-sm navbar-dark bg-dark sticky-top ">
        <div class="container">
            @Html.ActionLink("HomeCorner", "Index", "Home", new { area = "" }, new { @class = "navbar-brand logo-font" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    @*<li>@Html.ActionLink("Search", "Search", "Home", null, new { @class = "btn text-white" })</li>*@
                    <li>@Html.ActionLink("About Us", "AboutUs", "Home", null, new { @class = "btn text-white" })</li>
                    <li>@Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = "btn text-white" })</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-dark" })</li>
                    @*<li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn text-white"})</li>*@
                    @*<button class="btn btn-primary" data-toggle="modal" data-target="#registerModal">
                            Log in
                        </button>*@
                    <li class="btn btn-dark" id="login-modal-toggle-button">Log in</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-8">
                    <div>
                        @Html.ActionLink("HomeCorner", "Index", "Home", new { area = "" }, new { @class = "navbar-brand logo-font" })
                    </div>
                    <div class="text-center">
                        Our team will go the extra mile to analyze the particular project in detail, and offer a business solution that will meet your requirements.
                    </div>
                    <p class="mt-3">&copy; @DateTime.Now.Year - Home Corner</p>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-8">
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-8 text-md-right text-lg-right">
                    <h4>Follow Us</h4>
                    <div>
                        <a href="https://www.facebook.com/" class="fab fa-facebook-square"></a>
                        <a href="https://twitter.com/" class="fab fa-twitter-square"></a>
                        <a href="https://www.linkedin.com/" class="fab fa-linkedin"></a>
                        <a href="https://github.com/" class="fab fa-github-square"></a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/loginModal.js")
    @Scripts.Render("~/bundles/toastr")
    @RenderSection("scripts", required: false)
</body>
</html>